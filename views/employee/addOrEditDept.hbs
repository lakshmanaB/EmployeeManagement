<h3>{{viewTitle}}</h3>

<form action="/dept" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{dept._id}}">
    <div class="form-group">
        <label>Deparment Id</label>
        <input type="text" class="form-control" name="deptId" placeholder="Department Id" value="{{dept.deptId}}">
         <label>Deparment Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Department Name" value="{{dept.Name}}">
    </div>
   

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/dept/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>